getgenv().TableDescendants={}getgenv().MakeDescendants=function(a)for b,c in pairs(TableDescendants)do if b==a then return c[1]end end;TableDescendants[a]={a:GetDescendants(),a.DescendantAdded:Connect(function(c)table.insert(TableDescendants[a][1],c)end),a.DescendantRemoving:Connect(function(c)local d=table.find(TableDescendants[a][1],c)if d then table.remove(TableDescendants[a][1],d)end end)}return TableDescendants[a][1]end;getgenv().CleanDescendants=function(a)for b,c in pairs(TableDescendants)do if b==a then c[2]:Disconnect()c[3]:Disconnect()table.clear(c[1])c=nil end end end;getgenv().KillDescendants=function()MakeDescendants=nil;CleanDescendants=nil;table.clear(TableDescendants)end
